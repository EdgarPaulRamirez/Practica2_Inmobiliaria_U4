<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/propietario"
    tools:context=".Main3Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="PROPIETARIO"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        />


    <EditText
        android:id="@+id/identificador"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="ID Propietario"
        android:background="#ffff"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="170dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ffff"
        android:ems="10"
        android:hint="Nombre"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/domicilio"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_gravity="center"
        android:background="#ffff"
        android:hint="Domicilio"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/telefono"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="#ffff"
        android:hint="Telefono"/>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:id="@+id/insertar"
            android:background="@drawable/insertarimagen"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/consultarimagen"
            android:layout_marginLeft="10dp"
            android:id="@+id/consultar"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/borrarimagen"
            android:layout_marginLeft="10dp"
            android:id="@+id/eliminar"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/actualizarimagen"
            android:layout_marginLeft="10dp"
            android:id="@+id/actualizar"
            />

    </LinearLayout>

</LinearLayout>